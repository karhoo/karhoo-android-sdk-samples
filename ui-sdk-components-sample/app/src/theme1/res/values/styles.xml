<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/secondary</item>
        <item name="colorControlNormal">@color/primary_green</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="CustomisedQuotesSortView">
        <item name="leftBackground">@android:color/holo_blue_dark</item>
        <item name="rightBackground">@color/off_white</item>
        <item name="selectedTextColor">@color/off_white</item>
        <item name="unselectedTextColor">@color/colorBlack</item>
    </style>

    <style name="CustomisedQuotesSortView2">
        <item name="selectedTextColor">@color/blue</item>
        <item name="unselectedTextColor">@color/dark_green_grad</item>
    </style>

    <style name="CustomisedCategoryView1">
        <item name="selectedTabTextColor">@color/blue</item>
        <item name="unselectedTabTextColor">@color/colorWhite</item>
        <item name="unavailableTabTextColor">@color/grey</item>
    </style>

    <style name="CustomisedCategoryView2">
        <item name="selectedTabTextColor">@color/primary_green</item>
        <item name="unselectedTabTextColor">@color/greyish_white</item>
        <item name="unavailableTabTextColor">@color/bt_error_red</item>
    </style>

    <style name="CustomisedCategoryView3">
        <item name="selectedTabTextColor">@color/primary_red</item>
        <item name="unselectedTabTextColor">@color/bright_blue</item>
        <item name="unavailableTabTextColor">@color/dark_grey</item>
    </style>

    <style name="CustomBookingQuotesView">
        <item name="headerText">@style/CustomBookingQuotesViewHeaderTextStyle</item>
        <item name="detailsText">@style/CustomBookingQuotesViewDetailsTextStyle</item>
    </style>

    <style name="CustomBookingQuotesView2">
        <item name="headerText">@style/Text.Primary.Small</item>
        <item name="detailsText">@style/Text.Primary.Large</item>
    </style>

    <style name="CustomBookingQuotesViewHeaderTextStyle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/bright_blue</item>
    </style>

    <style name="CustomBookingQuotesViewDetailsTextStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="CustomPaymentView">
        <item name="addPaymentBackground">@drawable/uisdk_background_light_grey_dashed_rounded
        </item>
        <item name="changePaymentBackground">@drawable/uisdk_background_blue_rounded</item>
        <item name="addCardIcon">@drawable/uisdk_ic_plus</item>
        <item name="lineText">@style/Text.Black</item>
        <item name="actionText">@style/Text.Action.Primary</item>
    </style>

    <style name="CustomPaymentView2">
        <item name="changePaymentBackground">@drawable/uisdk_background_blue_rounded</item>
        <item name="addCardIcon">@drawable/uisdk_ic_plus</item>
        <item name="lineText">@style/Text.White.Medium</item>
        <item name="actionText">@style/Text.Red</item>
    </style>

    <style name="CustomPaymentView3">
        <item name="addPaymentBackground">@drawable/uisdk_background_light_grey_rounded
        </item>
        <item name="addCardIcon">@drawable/bt_ic_paypal</item>
        <item name="lineText">@style/Text.Black.Medium</item>
        <item name="actionText">@style/Text.White.Medium</item>
    </style>

</resources>